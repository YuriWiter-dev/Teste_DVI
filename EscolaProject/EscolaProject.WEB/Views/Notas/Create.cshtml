@model EscolaProject.DATA.Models.Notas

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Nome Aluno</label>
                <select asp-for="IdAluno" class="control-label">
                @foreach (var item in Model.Alunos)
                {
                   <option class="control-label" value="@item.Id">@item.NomeAluno</option>
                }
                </select>
            </div>


            <div class="form-group">
                <label class="control-label">Nome Aluno</label>
                <select asp-for="IdMateria" class="control-label">
                    @foreach (var item in Model.Materias)
                    {
                        <option class="control-label" value="@item.Id">@item.NomeMateria</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
